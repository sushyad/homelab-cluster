---
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: ceph
spec:
  interval: 30m
  chart:
    spec:
      chart: ceph
      version: 3.10.0
      sourceRef:
        kind: HelmRepository
        name: ceph
        namespace: flux-system
  install:
    remediation:
      retries: 3
  upgrade:
    cleanupOnFail: true
    remediation:
      retries: 3
  values:
    ndm:
      enabled: false
